{
  "manifest_version": 2,
  "name": "Cookie Manager Pro",
  "version": "1.0.0",
  "description": "Export and import your cookies easily and securely with AES-256 encryption",
  "author": "GAMAKADEV",
  "homepage_url": "https://github.com/GAMAKADEV/cookie-manager-pro",
  
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },

  "permissions": [
    "cookies",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    },
    "default_title": "Open Cookie Manager"
  },

  "sidebar_action": {
    "default_title": "Cookie Manager",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    },
    "open_at_install": false
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "cookie-manager@extension.local",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  }
}
